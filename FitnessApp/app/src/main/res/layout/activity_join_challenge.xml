<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background2"
    tools:context=".JoinChallengeActivity">

    <ListView
        android:id="@+id/rooms_view"
        android:layout_width="361dp"
        android:layout_height="491dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chall_room_searchView" />

    <SearchView
        android:id="@+id/chall_room_searchView"
        android:layout_width="373dp"
        android:layout_height="72dp"
        android:layout_marginTop="24dp"
        android:alpha="0.2"
        android:background="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.578"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/random_chall_btn"
        android:layout_width="319dp"
        android:layout_height="41dp"
        android:backgroundTint="@color/btn_color"
        android:onClick="randomChallenges"
        android:text="@string/refresh"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rooms_view" />

</androidx.constraintlayout.widget.ConstraintLayout>