<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#86D0F1"
    tools:context=".GoogleFitActivity">

    <Button
        android:id="@+id/googleFitBTN"
        android:layout_width="205dp"
        android:layout_height="49dp"
        android:backgroundTint="#C64343"
        android:onClick="googleFitDemo"
        android:text="GoogleFit Register"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.499" />

    <Button
        android:id="@+id/showDailyStepsBTN"
        android:layout_width="205dp"
        android:layout_height="49dp"
        android:backgroundTint="#C64343"
        android:onClick="showDailySteps"
        android:text="show daily steps"
        app:layout_constraintBottom_toTopOf="@+id/testingTV"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/googleFitBTN"
        app:layout_constraintVertical_bias="0.512" />

    <TextView
        android:id="@+id/testingTV"
        android:layout_width="364dp"
        android:layout_height="201dp"
        android:gravity="center"
        android:textColor="#C31919"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.489"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/googleFitBTN"
        app:layout_constraintVertical_bias="0.664" />

</androidx.constraintlayout.widget.ConstraintLayout>