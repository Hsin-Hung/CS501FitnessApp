<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background2"
    tools:context=".ChallengeLobbyActivity">

    <Button
        android:id="@+id/quit_chall_btn"
        android:layout_width="164dp"
        android:layout_height="45dp"
        android:layout_marginTop="3dp"
        android:background="@drawable/button1"
        android:onClick="quit"
        android:text="@string/quitChallenge"
        app:layout_constraintBottom_toTopOf="@+id/participant_grid"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/chall_info_btn"
        app:layout_constraintTop_toBottomOf="@+id/room_name_info_tv"
        app:layout_constraintVertical_bias="1.0" />

    <GridView
        android:id="@+id/participant_grid"
        android:layout_width="405dp"
        android:layout_height="499dp"
        android:horizontalSpacing="6dp"
        android:numColumns="3"
        android:verticalSpacing="6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button6"
        android:layout_width="164dp"
        android:layout_height="45dp"
        android:layout_marginStart="219dp"
        android:layout_marginEnd="28dp"
        android:background="@drawable/button1"
        android:onClick="viewStats"
        android:text="@string/beginChallenge"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/participant_grid"
        app:layout_constraintVertical_bias="0.464" />
    <Button
        android:id="@+id/chall_info_btn"
        android:layout_width="164dp"
        android:layout_height="45dp"
        android:layout_marginTop="3dp"
        android:background="@drawable/button1"
        android:onClick="challengeInfo"
        android:text="@string/challengeInfo"
        app:layout_constraintBottom_toTopOf="@+id/participant_grid"
        app:layout_constraintEnd_toStartOf="@+id/quit_chall_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/room_name_info_tv"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/room_name_info_tv"
        android:layout_width="259dp"
        android:layout_height="49dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:textColor="#F30B0B"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>