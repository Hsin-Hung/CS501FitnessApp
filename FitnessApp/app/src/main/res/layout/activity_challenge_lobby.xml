<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    tools:context=".ChallengeLobbyActivity">

    <Button
        android:id="@+id/quit_chall_btn"
        android:layout_width="168dp"
        android:layout_height="49dp"
        android:layout_marginBottom="26dp"
        android:backgroundTint="@android:color/holo_red_dark"
        android:onClick="quit"
        android:text="@string/quitChallenge"
        app:layout_constraintBottom_toTopOf="@+id/participant_grid"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <GridView
        android:id="@+id/participant_grid"
        android:layout_width="408dp"
        android:layout_height="603dp"
        android:horizontalSpacing="6dp"
        android:numColumns="3"
        android:verticalSpacing="6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button6"
        android:layout_width="163dp"
        android:layout_height="47dp"
        android:backgroundTint="@color/btn_color"
        android:onClick="viewStats"
        android:text="@string/viewStats"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/participant_grid" />

    <Button
        android:id="@+id/chall_info_btn"
        android:layout_width="180dp"
        android:layout_height="45dp"
        android:backgroundTint="@color/btn_color"
        android:onClick="challengeInfo"
        android:text="@string/challengeInfo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>