<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background2"
    tools:context=".ChallengeLobbyActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/room_name_info_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/chall_info_btn"
            android:layout_width="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button1"
            android:onClick="challengeInfo"
            android:text="@string/challengeInfo" />

        <Button
            android:id="@+id/quit_chall_btn"
            android:layout_width="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button1"
            android:onClick="quit"
            android:text="@string/quitChallenge" />

        <GridView
            android:id="@+id/participant_grid"
            android:layout_width="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            android:numColumns="3"
            android:columnWidth="50dp"
            android:verticalSpacing="1dp"
            android:horizontalSpacing="1dp">

        </GridView>

        <Button
            android:id="@+id/button6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/button1"
            android:onClick="viewStats"
            android:text="@string/beginChallenge" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>